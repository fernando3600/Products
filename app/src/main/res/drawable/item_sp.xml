<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#66000000" />
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="10dp"
                        android:top="1dp" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/flecha" />
            </item>
        </layer-list>
    </item>
</selector>